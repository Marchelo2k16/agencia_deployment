extends ../layout/index
block contenido
     main.container.mt-5
       h1.text-center.mb-5 #{pagina}
         


       .row  
           .col-md-12
              blockquote.text-center Lee sobre nuestros clientes y sus experiencias
              include ../layout/parcials/Testimoniales
           .col-md-12
               h2.text-center Agrega un Testimonial
               if(errores)
                  each error in errores
                      .alert.alert-danger.text-center #{error.mensaje}

               .row.justify-content-center
                   .col-md-8
                       form(action='/testimoniales',method="POST")
                           .form-group
                              label(for="nombre" ) Nombre
                              input(id="nombre", class="form-control", type="text", placeholder="Ingrese su Nombre",name="nombre", value=nombre)  
                           .form-group
                              label(for="correo" ) Correo Electronico
                              input(id="correo", class="form-control", type="email", placeholder="Ingrese su correo",name="correo",value=correo)  
                           .form-group
                              label(for="mensaje" ) Mensaje
                              textarea#mensaje(class="form-control", rows="3" , name="mensaje", placeholder="Tu Mensaje")=mensaje
                           input.btn.btn-success.btn-block(type="submit",value="Agregar")